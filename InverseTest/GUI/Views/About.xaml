<Window
    x:Class="InverseTest.GUI.Views.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:InverseTest.GUI.Views"
    mc:Ignorable="d"
    Title="О программе" Height="300" Width="300">
    
	<StackPanel>
		<TextBlock TextAlignment="Center" Text="{Binding Content}" />
		<TextBlock TextAlignment="Center" Text="{Binding VersionText}" Margin="0,40,0,0" />
	</StackPanel>
</Window>
