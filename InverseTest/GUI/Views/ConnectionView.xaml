<UserControl x:Class="InverseTest.GUI.Views.ConnectionPopUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InverseTest.GUI.Views"
      xmlns:localVMs="clr-namespace:InverseTest.GUI.ViewModels"
      mc:Ignorable="d" 
      Background="LightGray"
      >


    <Grid>
        <TabControl>
            <TabItem Header="Манипулятор">
            <local:ManipulatorView DataContext="{Binding Source={StaticResource ManipulatorVM}}" />
            </TabItem>
            <TabItem Header="Детектор">
                <local:DetectorView DataContext="{Binding Source={StaticResource DetectorVM}}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
