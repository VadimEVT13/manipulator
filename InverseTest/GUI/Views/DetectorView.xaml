<UserControl x:Class="InverseTest.GUI.Views.DetectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:InverseTest.GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="330" d:DesignWidth="320">
	<UserControl.InputBindings>
		<KeyBinding Command="{Binding Open}" Key="O" />
		<KeyBinding Command="{Binding Close}" Key="C" />

		<KeyBinding Command="{Binding PX}" Key="Q" />
		<KeyBinding Command="{Binding MX}" Key="A" />

		<KeyBinding Command="{Binding PY}" Key="W" />
		<KeyBinding Command="{Binding MY}" Key="S" />

		<KeyBinding Command="{Binding PZ}" Key="E" />
		<KeyBinding Command="{Binding MZ}" Key="D" />

		<KeyBinding Command="{Binding PA}" Key="R" />
		<KeyBinding Command="{Binding MA}" Key="F" />

		<KeyBinding Command="{Binding PB}" Key="T" />
		<KeyBinding Command="{Binding MB}" Key="G" />
	</UserControl.InputBindings>

	<StackPanel>
		<TextBlock Margin="5" TextAlignment="Left" Text="{Binding Status}"/>
		<StackPanel Orientation="Horizontal">
			<StackPanel>
				<Button Margin="5" Width="70" Content="Open" Command="{Binding Open}" />
				<Button Margin="5" Width="70" Content="Close" Command="{Binding Close}" />
			</StackPanel>
			<StackPanel>
				<Button Margin="5" Width="70" Content="Start" Command="{Binding Start}" />
				<Button Margin="5" Width="70" Content="Pause" Command="{Binding Pause}" />
			</StackPanel>
			<StackPanel>
				<Button Margin="5" Width="70" Content="Home" Command="{Binding Home}" />
				<Button Margin="5" Width="70" Content="Unlock" Command="{Binding Unlock}" />
			</StackPanel>
			<StackPanel>
				<TextBlock Margin="5" Width="70" Height="20" Text="Step"/>
				<TextBox Margin="5" Width="70" Text="{Binding Speed}"/>
			</StackPanel>
		</StackPanel>
		<StackPanel>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0" Margin="5" Text="X"/>
				<TextBox Grid.Column="1" Margin="5" Text="{Binding X}"/>
			</Grid>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0" Margin="5" Text="Y"/>
				<TextBox Grid.Column="1" Margin="5" Text="{Binding Y}"/>
			</Grid>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0" Margin="5" Text="Z"/>
				<TextBox Grid.Column="1" Margin="5" Text="{Binding Z}"/>
			</Grid>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0" Margin="5" Text="A"/>
				<TextBox Grid.Column="1" Margin="5" Text="{Binding A}"/>
			</Grid>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0" Margin="5" Text="B"/>
				<TextBox Grid.Column="1" Margin="5" Text="{Binding B}"/>
			</Grid>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Button Grid.Column="0" Margin="10" Width="70" Content="Global" Command="{Binding Global}" />
				<Button Grid.Column="1" Margin="10" Width="70" Content="Local" Command="{Binding Local}" />
			</Grid>
		</StackPanel>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Button Grid.Column="0" Grid.Row="0" Margin="5" Width="40" Content="+X" Command="{Binding PX}" />
			<Button Grid.Column="0" Grid.Row="1" Margin="5" Width="40" Content="-X" Command="{Binding MX}" />

			<Button Grid.Column="1" Grid.Row="0" Margin="5" Width="40" Content="+Y" Command="{Binding PY}" />
			<Button Grid.Column="1" Grid.Row="1" Margin="5" Width="40" Content="-Y" Command="{Binding MY}" />

			<Button Grid.Column="2" Grid.Row="0" Margin="5" Width="40" Content="+Z" Command="{Binding PZ}" />
			<Button Grid.Column="2" Grid.Row="1" Margin="5" Width="40" Content="-Z" Command="{Binding MZ}" />

			<Button Grid.Column="3" Grid.Row="0" Margin="5" Width="40" Content="+A" Command="{Binding PA}" />
			<Button Grid.Column="3" Grid.Row="1" Margin="5" Width="40" Content="-A" Command="{Binding MA}" />

			<Button Grid.Column="4" Grid.Row="0" Margin="5" Width="40" Content="+B" Command="{Binding PB}" />
			<Button Grid.Column="4" Grid.Row="1" Margin="5" Width="40" Content="-B" Command="{Binding MB}" />
		</Grid>
	</StackPanel>
</UserControl>