<UserControl x:Class="InverseTest.GUI.Controls.PathListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InverseTest.GUI.Controls"
             xmlns:path="clr-namespace:InverseTest"
             xmlns:Path="clr-namespace:InverseTest"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    
    <UserControl.Resources>
       
        
        
        <Style x:Key="itemstyle" TargetType="{x:Type ListViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>

        </Style>

        <!--<Path:ScanPath x:Key="SPath"/>-->


    </UserControl.Resources>

    <Grid>
        <Grid Visibility="Visible" Name="TargetPointsListButtonsGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="53*" />
                <ColumnDefinition Width="53"/>
                <ColumnDefinition Width="53" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
        <ListView  Visibility="Visible" Name="TargetPointsListView" ItemContainerStyle="{StaticResource itemstyle}" 
                                          SelectionChanged="TargetPointsListView_SelectionChanged">

            <!--ItemsSource="{Binding Source={StaticResource SPath}, Path=points, Mode=TwoWay}"-->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="X" Width="auto" DisplayMemberBinding="{Binding point.X}" />
                    <GridViewColumn Header="Y" Width="auto" DisplayMemberBinding="{Binding point.Y}" />
                    <GridViewColumn Header="Z" Width="auto" DisplayMemberBinding="{Binding point.Z}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
